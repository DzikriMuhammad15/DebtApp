<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/DashBoardStyle.css" />

    <title>DebtApp</title>
  </head>
  <body>
    <div>
      <!-- SIDEBAR -->
      <section id="sidebar">
        <a href="#" class="brand">
          <i class="bx bxs-smile"></i>
          <span class="text">DebtApp</span>
        </a>
        <ul class="side-menu top">
          <li>
            <a href="/dashboard">
              <i class="bx bxs-dashboard"></i>
              <span class="text">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/debt">
              <i class="bx bxs-shopping-bag-alt"></i>
              <span class="text">Create Debt</span>
            </a>
          </li>
          <li class="active">
            <a href="#">
              <i class="bx bxs-doughnut-chart"></i>
              <span class="text">Pay Debt</span>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="bx bxs-message-dots"></i>
              <span class="text">Message</span>
            </a>
          </li>
          <li>
            <a href="/social">
              <i class="bx bxs-group"></i>
              <span class="text">Social</span>
            </a>
          </li>
        </ul>
        <ul class="side-menu">
          <li>
            <a href="#">
              <i class="bx bxs-cog"></i>
              <span class="text">Settings</span>
            </a>
          </li>
          <li>
            <a class="logout">
              <i class="bx bxs-log-out-circle"></i>
              <span class="text">
                <button
                  type="button"
                  class="btn btnLogout"
                  data-bs-toggle="modal"
                  data-bs-target="#modalLogout"
                >
                  Logout
                </button></span
              >
            </a>
          </li>
        </ul>
      </section>
      <!-- SIDEBAR -->

      <!-- CONTENT -->
      <section id="content">
        <!-- NAVBAR -->
        <nav>
          <i class="bx bx-menu"></i>
          <a href="#" class="nav-link">Social</a>
          <form action="#" class="formSearchAddFriend">
            <div class="form-input">
              <input
                type="text"
                placeholder="Search..."
                id="emailAddFriend"
                name="emailAddFriend"
              />
              <button type="submit" class="search-btn searchAddFriend">
                <i class="bx bx-search"></i>
              </button>
            </div>
          </form>
          <input type="checkbox" id="switch-mode" hidden />
          <label for="switch-mode" class="switch-mode"></label>
          <a href="#" class="notification">
            <i class="bx bxs-bell"></i>
            <span class="num">8</span>
          </a>
          <a href="#" class="profile">
            <img src="/images/people.png" />
          </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
          <div class="head-title"></div>

          <div class="table-data">
            <div class="order">
              <div class="head">
                <h3>Payment Request</h3>
                <i class="bx bx-search"></i>
                <i class="bx bx-filter"></i>
              </div>
              <table>
                <thead>
                  <tr>
                    <th>Berhutang</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% if (requestedPayment.length > 0) { %> <%
                  requestedPayment.forEach(element => { %>
                  <tr>
                    <td>
                      <img src="/images/people.png" />
                      <p><%= element.namaHutang %></p>
                    </td>
                    <td><%= element.amount %></td>
                    <td><%= element.description %></td>
                    <td><%= element.date %></td>
                    <td>
                      <button
                        class="btn btn-primary verifyPayment"
                        data-id="<%= element._id %>"
                      >
                        >
                        <i class="bx bxs-cloud-download"></i>
                        <span class="text">Verify</span>
                      </button>
                    </td>
                  </tr>

                  <% }) %> <% } %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="table-data">
            <div class="order">
              <div class="head">
                <h3>Debt Request History</h3>
                <i class="bx bx-search"></i>
                <i class="bx bx-filter"></i>
              </div>
              <table>
                <thead>
                  <tr>
                    <th>Memiliki Piutang</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Verified</th>
                    <th>Paid</th>
                    <th>Remaining</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% if (trans.length > 0) { %> <% trans.forEach(element => { %>
                  <tr>
                    <td>
                      <img src="/images/people.png" />
                      <p><%= element.namaPiutang%></p>
                    </td>
                    <td><%= element.amount %></td>
                    <td><%= element.description %></td>
                    <td><%= element.verified %></td>
                    <td><%= element.paid %></td>
                    <td><%= element.remaining %></td>
                    <td>
                      <button
                        class="btn btn-primary payDebt"
                        data-id="<%=element._id%>"
                      >
                        >
                        <i class="bx bxs-cloud-download"></i>
                        <span class="text">Pay</span>
                      </button>
                    </td>

                    <% }) %> <% } %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </main>
        <!-- MAIN -->
      </section>
    </div>
    <!-- CONTENT -->
    <!-- Modal Logout -->
    <div class="modal fade" id="modalLogout" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Logout</h1>
          </div>
          <div class="modal-body">Are you sure want to logout?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Back
            </button>
            <a href="/auth/logout">
              <button type="button" class="btn btn-danger lastLogoutButton">
                Logout
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal end -->

    <!-- Modal payment request -->
    <div class="modal fade" id="modalCreatePaymentRequest" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Pay Debt</h1>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"
                  >Amount</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="amountInputPay"
                  aria-describedby="emailHelp"
                />
              </div>
              <div class="amount error"></div>

              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"
                  >Description</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="descriptionInputPay"
                  aria-describedby="emailHelp"
                />
                <div class="description error"></div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Back
            </button>
            <button type="button" class="btn btn-primary" id="submitPayButton">
              Pay Debt
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal end -->

    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/DashboardScript.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
      integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
