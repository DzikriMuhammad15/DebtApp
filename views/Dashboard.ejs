<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Profile -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/stylesheets/profile.css" />

    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/DashboardStyle.css" />

    <title>DebtApp</title>
  </head>
  <body>
    <div id="loading-overlay">
      <div id="loading-spinner"></div>
    </div>
    <div>
      <!-- SIDEBAR -->
      <section id="sidebar">
        <a href="#" class="brand">
          <i class="bx bxs-smile"></i>
          <span class="text">DebtApp</span>
        </a>
        <ul class="side-menu top">
          <li class="active">
            <a href="#">
              <i class="bx bxs-dashboard"></i>
              <span class="text">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/debt">
              <i class="bx bxs-shopping-bag-alt"></i>
              <span class="text">Create Debt</span>
            </a>
          </li>
          <li>
            <a href="/payment">
              <i class="bx bxs-doughnut-chart"></i>
              <span class="text">Pay Debt</span>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="bx bxs-message-dots"></i>
              <span class="text">Message</span>
            </a>
          </li>
          <li>
            <a href="/social">
              <i class="bx bxs-group"></i>
              <span class="text">Social</span>
            </a>
          </li>
        </ul>
        <ul class="side-menu">
          <li>
            <a href="#">
              <i class="bx bxs-cog"></i>
              <span class="text">Settings</span>
            </a>
          </li>
          <li>
            <a class="logout">
              <i class="bx bxs-log-out-circle"></i>
              <span class="text">
                <button
                  type="button"
                  class="btn btnLogout"
                  data-bs-toggle="modal"
                  data-bs-target="#modalLogout"
                >
                  Logout
                </button></span
              >
            </a>
          </li>
        </ul>
      </section>
      <!-- SIDEBAR -->

      <!-- CONTENT -->
      <section id="content">
        <!-- NAVBAR -->
        <%- include('partials/navbar'); -%>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
          <div class="head-title">
            <div class="left">
              <h1>Welcome, <%= user.firstName %></h1>
              <ul class="breadcrumb">
                <li>
                  <a href="#">Dashboard</a>
                </li>
                <li><i class="bx bx-chevron-right"></i></li>
                <li>
                  <a class="active" href="#">Home</a>
                </li>
              </ul>
            </div>
          </div>

          <ul class="box-info">
            <li>
              <i class="bx bxs-calendar-check"></i>
              <span class="text">
                <% if (piutang1.length > 0) { %> <% var piutang = 0; %> <%
                piutang1.forEach(element => { %> <% piutang = piutang +
                element.remaining; %> <% }); %>
                <h3>Rp<%= piutang %></h3>
                <% } else { %>
                <h3>Rp0</h3>
                <% } %>
                <p>Piutang</p>
              </span>
            </li>
            <li>
              <i class="bx bxs-dollar-circle"></i>
              <span class="text">
                <% if (hutang1.length > 0) { %> <% var hutang = 0; %> <%
                hutang1.forEach(element => { %> <% hutang = hutang +
                element.remaining; %> <% }); %>
                <h3>Rp<%= hutang %></h3>
                <% } else { %>
                <h3>Rp0</h3>
                <% } %>
                <p>Hutang</p>
              </span>
            </li>
          </ul>

          <div class="table-data">
            <div class="order">
              <div class="head">
                <h3>Piutang</h3>
              </div>
              <table>
                <thead>
                  <tr>
                    <th>Berhutang</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Remaining</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% piutang1.forEach(element => { %>
                  <tr>
                    <td>
                      <img src="/images/people.png" />
                      <p><%= element.emailHutang %></p>
                    </td>
                    <td><%= element.description %></td>
                    <td><%= element.amount %></td>
                    <td><%= element.remaining %></td>
                    <% if (element.lunas) { %>
                    <td><span class="status completed">Lunas</span></td>
                    <% } else { %>
                    <td><span class="status process">Piutang</span></td>
                    <% } %>
                    <td>
                      <button
                        class="btn btn-outline-primary btn-sm paymentHistoryButton"
                        data-id="<%= element._id %>"
                      >
                        <span class="text">Payment History</span>
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <div class="order">
              <div class="head">
                <h3>Hutang</h3>
              </div>
              <table>
                <thead>
                  <tr>
                    <th>Memiliki Hutang</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Remaining</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% hutang1.forEach(element => { %>
                  <tr>
                    <td>
                      <img src="/images/people.png" />
                      <p><%= element.emailPiutang %></p>
                    </td>
                    <td><%= element.description %></td>
                    <td><%= element.amount %></td>
                    <td><%= element.remaining %></td>
                    <% if (element.lunas) { %>
                    <td><span class="status completed">Lunas</span></td>
                    <% } else { %>
                    <td><span class="status pending">Hutang</span></td>
                    <% } %>
                    <td>
                      <button
                        class="btn btn-outline-primary btn-sm paymentHistoryButton"
                        data-id="<%= element._id %>"
                      >
                        <span class="text">Payment History</span>
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </main>
        <!-- MAIN -->
      </section>
    </div>
    <!-- CONTENT -->
    <!-- Modal Logout -->
    <div class="modal fade" id="modalLogout" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Logout</h1>
          </div>
          <div class="modal-body">Are you sure want to logout?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Back
            </button>
            <a href="/auth/logout">
              <button type="button" class="btn btn-danger lastLogoutButton">
                Logout
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal end -->

    <!-- Modal History -->
    <!-- Scrollable modal -->
    <div
      class="modal fade modal-xl order"
      id="modalPaymentHistory"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Payment History
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="isiModalPaymentHistory"></div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal History End -->

    <!-- Tambahkan jQuery dari CDN sebelum menyertakan Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <!-- Tambahkan Bootstrap JS dan Popper.js setelah jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="/javascripts/DashboardScript.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
      integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/profileScript.js"></script>
  </body>
</html>
